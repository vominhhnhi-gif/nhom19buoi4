# Backend environment variables - copy to .env and fill values
# MongoDB connection string
MONGODB_URI=mongodb://localhost:27017/nhom19buoi4

# Server port
PORT=3000

# Frontend origin used to build reset password links (no trailing slash)
FRONTEND_ORIGIN=http://localhost:5173

# JWT secrets
JWT_SECRET=replace_with_a_random_secret_for_jwt
REFRESH_SECRET=replace_with_a_random_refresh_secret

# SMTP (for sending reset password emails). For Gmail use an App Password (recommended):
# - SMTP_USER: your Gmail address (e.g. youraccount@gmail.com)
# - SMTP_PASS: app password generated from Google Account -> Security -> App passwords
# Optional: SMTP_FROM to set a nicer 'from' name/address
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password_here
SMTP_FROM="Group14 <your_email@gmail.com>"
# Optional SMTP host/port/secure override (defaults to Gmail SMTP)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=465
# SMTP_SECURE=true

# Optional: if you're testing locally and want dev behavior
NODE_ENV=development

# Optional: allow using non-secure SMTP (set to 'false' if needed)
# SMTP_SECURE=false
